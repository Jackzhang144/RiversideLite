{
  "manifest_version": 3,
  "name": "清水河畔助手 Lite",
  "version": "2.0",
  "description": "清水河畔保活与消息提醒插件",
  "icons": {
    "16": "River.png",
    "48": "River.png",
    "128": "River.png"
  },
  "action": {
    "default_title": "点击展开消息弹窗",
    "default_icon": "River.png"
  },
  "options_page": "options.html",
  "permissions": [
    "alarms",
    "tabs",
    "notifications",
    "cookies",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://bbs.uestc.edu.cn/*",
    "*://bbs.uestcer.org/*",
    "https://api.chuckfang.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}
